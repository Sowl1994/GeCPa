{% extends 'home/index.html.twig' %}

{% block title %}Detalles del encargo{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styleOrder.css') }}">
{% endblock %}

{% block content %}
    <div class="col-md-12"><h1>Detalles del encargo</h1></div>

    <div class="col-md-12 clientOrderDetail"><br>

        <div class="clientData">
            <h3>Datos del cliente</h3>
            <label>Nombre: </label><p>{{ order.client.firstName }} {{ order.client.lastName }} {{ order.client.alias }}</p>
            <label>Domicilio: </label><p>{{ order.client.address }}</p>
        </div>
        <div style="float: right;">
            <h2>Opciones</h2>
            <a class="btn btn-primary" href="{{ path('order_debt', {'id': order.id}) }}">Añadir encargo a la deuda</a>
            <a class="btn btn-success" href="{{ path('finish_order', {'id': order.id}) }}">Finalizar encargo</a>
        </div>
        <br><br>
        <div class="dates">
            <h3>Fechas</h3>
            <div>
                <label>Fecha de encargo:</label> <p>{{ order.orderDate|date('d-m-Y') }}</p>
                <label>Fecha de entrega:</label> <p>{{ order.deliveryDate|date('d-m-Y') }}</p>
            </div>
        </div>
        <br>
        <h3>Productos encargados</h3>
        <div class="productData">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Producto (valor)</th>
                        <th>Cantidad encargada</th>
                    </tr>
                </thead>
                <tbody>
                    {% for product in order.orderProducts %}
                        <tr>
                            <td>{{ product.product }}</td>
                            <td>{{ product.quantity }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            <div>
                <h2>Precio del encargo: {{ count }} €</h2>
            </div>
        </div>
    </div>
{% endblock %}