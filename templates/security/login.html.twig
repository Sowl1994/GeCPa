{% extends 'base.html.twig' %}

{% block title %}Acceso a GeCPa{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styleLogin.css') }}">
{% endblock %}

{% block body %}
<form class="form-signin" method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">Por favor, introduzca sus datos para acceder</h1>
    <label for="inputEmail" class="sr-only">Correo electr칩nico</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Correo electr칩nico" required autofocus>
    <label for="inputPassword" class="sr-only">Contrase침a</label>
    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Contrase침a" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-lg btn-primary" type="submit">
        Acceder
    </button>
</form>
{% endblock %}
