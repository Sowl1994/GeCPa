{% extends 'home/index.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styleWorker.css') }}">
{% endblock %}
{% block title %}√Årea de trabajadores - {{ worker.firstName }} {{ worker.lastName }}{% endblock %}
{% block content %}
